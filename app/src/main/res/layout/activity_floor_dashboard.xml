<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/floorWelcomeText"
            android:text="Floor Dashboard"
            android:textColor="#333333"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/scanToWipBtn"
            android:text="Scan to WIP"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/scanToBoxBtn"
            android:text="Scan to Box"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/scanOutWipBtn"
            android:text="Scan Out from WIP"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9800"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/scanOutReworkBtn"
            android:text="Scan Out for Rework"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F44336" />

    </LinearLayout>
</ScrollView>
